{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmitHelpers": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "target": "ES5",
    "outDir": "./dist/"
  },
  "exclude": ["dist"],
  "include": ["src"],
  "compileOnSave": false
}

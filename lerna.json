{
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "run": {
      "stream": true
    },
    "publish": {
      "message": "chore: publish",
      "createRelease": "github",
      "conventionalCommits": true,
      "verifyAccess": false
    },
    "version": {
      "allowBranch": ["master", "release/*"],
      "forcePublish": true,
      "ignore-changes": [".github/**", "docs/**"]
    }
  }
}
